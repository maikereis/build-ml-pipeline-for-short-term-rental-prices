name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Input dataset
        type: string

      output_artifact:
        description: Output dataset
        type: string

      output_type:
        description: A pandas dataframe (pd.DataFrame)
        type: string

      output_description:
        description: The cleaned data. A dataframe slice where price is in between min_price and max_price
        type: string

      min_price:
        description: The minimum acceptable price
        type: float

      max_price:
        description: The maximum acceptable price
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
